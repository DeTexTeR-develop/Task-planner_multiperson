  <body>
    <section>
      <header>
        <h1>Todo App</h1>
        <form action="#">
          <input
            type="text"
            id="input-form-text"
            placeholder="Enter the Work"
          />
          <button id="input-form-btn"><i class="fa-solid fa-plus"></i></button>
        </form>
      </header>

      <div class="container">
        <div class="task">Hello</div>
      </div>
    </section>

